FROM rust:latest
RUN apt-get update && \
    apt-get -y install ca-certificates cmake musl-tools libssl-dev openssl && \
    rustup target add x86_64-unknown-linux-musl && \
    rustup target add i686-unknown-linux-gnu && \
    rustup target add x86_64-unknown-linux-gnu && \
    rustup target add aarch64-unknown-linux-gnu
WORKDIR /usr/src
COPY --chmod=554 scripts/build_image.sh .
CMD ["./build_image.sh"]